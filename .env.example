# Application
PROJECT_NAME=Sardoba Cashback App
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
SMS_DRY_RUN=false
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/sardoba

# Cache
REDIS_URL=redis://redis:6379/0

# MyResto API
MENU_API_URL=https://sardobarestaurant.myresto.online/api/v1/menu
MENU_GIJDUVON_API_URL=https://sardobagijduvon.myresto.online/api/v1/menu
STOP_LIST_API_URL=https://sardobarestaurant.myresto.online/api/v1/menu/stop-lists
STOP_LIST_GIJDUVON_API_URL=https://sardobagijduvon.myresto.online/api/v1/menu/stop-lists
STORE_IDS=139350,139458,139235,157757
SARDOBA_GEOFIZIKA=139235
SARDOBA_GIDIVON=157757
SARDOBA_SEVERNIY=139350
SARDOBA_MK5=139458
MENU_CACHE_TTL=120
STOPLIST_CACHE_TTL=60
MENU_RESPONSE_CACHE_TTL=30
MENU_HTTP_TIMEOUT=10

# JWT
JWT_SECRET_KEY=change_me_access
JWT_REFRESH_SECRET_KEY=change_me_refresh
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=14

# IIKO
IIKO_API_BASE_URL=https://api-ru.iiko.services
IIKO_API_LOGIN=your-iiko-api-login
IIKO_ORGANIZATION_ID=your-iiko-organization-id

# OTP
# OTP_STATIC_CODE=123456  # optional: uncomment to force same OTP for testing
OTP_LENGTH=6
OTP_EXPIRATION_MINUTES=5
OTP_RATE_LIMIT_PER_HOUR=5
# LOGIN_RATE_LIMIT_PER_WINDOW=5
# OTP_RATE_LIMIT_BYPASS_PHONES=+998931434413,+99890XXXXXXX  # comma separated list of phones to bypass rate limiting
# OTP_BYPASS_VERIFY_PHONES=+998931434413  # phones that may always verify with demo OTP code
# DEMO_PHONE=+998911111111
# OTP_DEMO_CODE=1111
# INTERNAL_DOCS_SECRET=changeme123  # required to view /api/sardoba/internal-docs/

# Password hashing
PASSWORD_HASHING_ROUNDS=12

# CORS (comma separated origins)
CORS_ORIGINS=

# Eskiz SMS
ESKIZ_LOGIN=your-eskiz-login
ESKIZ_PASSWORD=your-eskiz-password
ESKIZ_FROM_WHOM=4546
ESKIZ_SMS_TEMPLATE=Kod podtverjdeniya dlya vhoda v sistemu Restoran Sardoba - {code}. Pozhaluysta ne peredavayte drugim.

# Default admin bootstrap (optional)
DEFAULT_ADMIN_NAME=Sardoba Admin
DEFAULT_ADMIN_PHONE=+998931434413
DEFAULT_ADMIN_PASSWORD=admin123
